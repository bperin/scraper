{
    "$schema": "https://json.schemastore.org/prettierrc",
    "semi": true,
    "singleQuote": false,
    "printWidth": 1200,
    "trailingComma": "es5",
    "tabWidth": 4,
    "overrides": [
        {
            "files": "*.sol",
            "options": {
                "tabWidth": 4,
                "printWidth": 1200
            }
        },
        {
            "files": "*.yaml",
            "options": {
                "tabWidth": 2, 
                "printWidth": 80,
                "singleQuote": false
            }
        },
        {
            "files": "*.yml",
            "options": {
                "tabWidth": 2, 
                "printWidth": 80, 
                "singleQuote": false 
            }
        }
    ]
}